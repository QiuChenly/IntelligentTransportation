            <TextView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:id="@+id/bus_distance3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距站台300米"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:id="@+id/bus_img4"
                android:scaleType="fitCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_directions_bus_blue_24dp"/>
            <TextView
                android:layout_toEndOf="@+id/bus_img4"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:id="@+id/bus_no4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2号（101人）"/>
            <TextView
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:id="@+id/bus_arriveTime4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7分钟到达"/>
            <TextView
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:id="@+id/bus_distance4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="距站台1200米"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>