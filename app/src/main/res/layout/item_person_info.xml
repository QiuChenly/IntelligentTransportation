<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:background="#938f8f"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/person_info_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/button_add_red" />

        <TextView
            android:id="@+id/person_info_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="姓名：xxx"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/person_info_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="性别：男"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/person_info_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="电话：12345678911"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="#b3abab">

            <TextView
                android:id="@+id/person_info_tv_Id_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="身份证号：320161196904263017"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/person_info_tv_registration_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:lines="1"
                android:text="注册日期：2017.5.1"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="20"
            android:background="#bebcbc"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="名下车辆"
                android:textSize="18sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/person_info_RV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>