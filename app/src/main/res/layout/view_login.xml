<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.liunianyishi.intelligenttransportation.View.LoginActivity">

    <!--登陆-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/Login_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp"
        android:background="#3b4acf">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Login_Img1"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_settings_applications_black_24dp" />

            <TextView
                android:id="@+id/Login_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="用户登陆"
                android:textColor="#fff"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/Login_Img2"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/Login_btn_network"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_settings_black_24dp" />

            <Button
                android:id="@+id/Login_btn_network"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="网络设置"
                android:textColor="#fff"
                android:textSize="20sp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Login_et_user"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="请输入账号"
            android:imeOptions="actionNext"
            android:singleLine="true" />

        <EditText
            android:id="@+id/Login_et_pass"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:hint="请输入密码"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:singleLine="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/Login_cb_rememberPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:text="记住密码"
                android:textSize="20sp" />

            <CheckBox
                android:id="@+id/Login_cb_autoLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="自动登陆"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Login_btn_Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:text="登 陆"
                android:textSize="20sp" />

            <Button
                android:id="@+id/Login_btn_registered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="注 册"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
